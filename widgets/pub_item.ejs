<style>
/* Clear some padding and margin on the page */
.post-header .post-meta {
    display: none;
}
.posts-expand {
    padding-top: 0px !important;
}

.pub-list {
    line-height: 1.5;
}

.pub-list section.year {
    position: relative;

    padding: 1em 0em 0em 0em;
    margin-left: 3.5em;

    /* Place the .year-mark-wrapper and ul at the same vertical point from the top edge */
    display: flex;
    align-items: flex-start;
}

/* The vertical line */
.pub-list section.year ul li {
    position: relative;
}
.pub-list section.year ul li::before {
    content: ' ';

    background: rgba(.3, .3, .3, .3);
    z-index: -1;

    position: absolute;
    left: calc(-2em + -2px);
    width: 2px;
    top: -1px;
    bottom: 0px;
}
.pub-list section.year ul li:first-child::before {
    top: calc(-1em + -1px);
}
.pub-list section.year:last-child ul li:last-child::before {
    background: linear-gradient(to bottom, rgba(.3, .3, .3, .3) 60%, rgba(.3, .3, .3, 0));
}

/* The circle and year */
.pub-list .year-mark-wrapper {
    /* Align .year-mark center within the height of a line */
    display: flex;
    align-items: center;
    width: 0px;
    /* sticky effect */
    position: sticky;
    top: 5em; /* 1em + 2 * 1em padding of select + height of select */
}
.pub-list .year-mark-wrapper::before {
    /* Use the pseudo element to make the .year-mark-wrapper exactly the height of a line of text */
    content: "A";
    width: 0px;
    visibility: hidden;
}
.pub-list .year-mark {
    position: relative;
    left: -8px;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;

    width: 10px;
    height: 10px;
    background: #C5C5C5;
    border: 2px solid #ffffff;
    border-radius: 10px;
    z-index: 2;
}

.pub-list .year-mark::before {
    content: attr(data-year);
    font-size: 1rem;
    font-weight: bold;

    margin-right: 1em;
}
@media (min-width: 62em) {
    .pub-list .year-mark::before {
        font-size: 1.1rem;
    }
}

/* The styling of the list */
.pub-list section.year ul {
    padding: 0 0 0 2em;
    margin: 0em;
    font-size: 1em;
}
@media (min-width: 62em) {
    .pub-list section.year section ul {
        font-size: 1.1em;
        padding-left: 2.2em;
    }
}

.pub-list section.year ul li {
    list-style-type: none;
    padding: 1rem 0rem 1.25rem 0rem;
    border-bottom: 1px dashed #ccc;
}
.pub-list section.year ul li:first-child {
    padding-top: 0rem;
}
.pub-list section.year:last-child ul li:last-child {
    border-bottom: none;
}

/* The publication block */
.pub-list .pub-block p {
    margin: 0;
    padding: 0;
}
.pub-block .pub-title {
    font-weight: bold;
}
.pub-block .pub-authors,
.pub-block .pub-conference,
.pub-block .pub-links {
    font-size: 0.9em;
}
.pub-block .pub-conference {
    font-style: italic;
}

.pub-block .pub-abstract {
    display: none;

    padding: 1em 0em;
}

/* timeline search panel */
.timeline-search-panel {
    display: flex;
    justify-content: left;
    align-items: center;

    padding: 1em 0em 1em 0em;
    margin-top: -1em;

    border-bottom: dashed 1px #ccc;

    position: sticky;
    top: 0px;

    background: white;
    z-index: 10;
}
#timeline .timeline-search-panel h4 {
    margin: 0em 1em 0em .5em;
    padding: 0px;
}

/* The select box */
.select-box {
    position: relative;
    display: flex;
    align-items: center;
}
.select-box .select-arrow {
    position: relative;
    height: 1.5em;
    width: 0em;

    left: -2em;

    pointer-events: none;
    z-index: 2;
    transition: all 250ms cubic-bezier(0.4, 0.25, 0.3, 1);
    opacity: 0.6;
}
.select-box .select-arrow svg {
    width: 1.5em;
    height: auto;
    fill: #a0a0a0;
}
.select-box select {
    /* No default arrow */
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    outline: none;

    border: 2px solid rgba(.3, .3, .3, .3);
    background: #fff;
    padding-left: 1em;
    padding-right: 2.5em;
}

/* The checkbox */
.check-box {
    margin: 0em 1em 0em 2em;
    display: flex;
    align-items: center;
}

.check-box ~ .check-box {
    margin: 0em 1em;
}

.check-box input[type="checkbox"] {
    margin-right: .2em;
}
</style>

<%_
    let types = page.site.data.publications.types;
    let conferences = page.site.data.publications.conferences;
    let publications = page.site.data.publications.items;
    publications = publications.sort((a, b) => {
        if (conferences[a.confkey].date === conferences[b.confkey].date)
            return 0;
        return moment(conferences[a.confkey].date).isBefore(conferences[b.confkey].date) ? 1 : -1;
    });
_%>
<div id="timeline">
    <div class="timeline-search-panel">
        <h4>Filters:</h4>
        <label class="select-box">
            <select>
                <option value="all" selected>All Venues</option>
                <%_ Object.keys(types).sort().forEach(t => { _%>
                <optgroup label="<%= types[t] %>">
                    <%_ Object.keys(conferences).filter(confkey => conferences[confkey].cat === t).sort().forEach(confkey => { _%>
                    <option value="<%= conferences[confkey].venue %>"><%= conferences[confkey].venue %></option>
                    <%_ }); _%>
                </optgroup>
                <%_ }); _%>
            </select>
            <span class="select-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                     version="1.1" viewBox="0 0 129 129"
                     enable-background="new 0 0 129 129"
                     width="512px" height="512px">
                    <g>
                        <path d="m121.3,34.6c-1.6-1.6-4.2-1.6-5.8,0l-51,51.1-51.1-51.1c-1.6-1.6-4.2-1.6-5.8,0-1.6,1.6-1.6,4.2 0,5.8l53.9,53.9c0.8,0.8 1.8,1.2 2.9,1.2 1,0 2.1-0.4 2.9-1.2l53.9-53.9c1.7-1.6 1.7-4.2 0.1-5.8z"/>
                    </g>
                </svg>
            </span>
        </label>
        <%_ Object.keys(types).sort().forEach(t => { _%>
        <label class="check-box">
            <input type="checkbox" checked="checked" value="t"> <%= types[t] %>
        </label>
        <%_ }); _%>
    </div>
    <div class="pub-list">
    <%_ let year = ''; _%>
    <%_ publications.forEach(pub => { _%>
        <%_ pub.year = date(conferences[pub.confkey].date, 'YYYY'); _%>
        <%_ if (year !== pub.year) { _%>
            <%_ if (year !== '') { _%>
            </ul>
        </section>
            <%_ } _%>
            <%_ year = pub.year; _%>
        <section class="year">
            <div class="year-mark-wrapper">
                <span class="year-mark" data-year="<%= year %>"></span>
            </div>
            <ul>
        <%_ } _%>
                <%# A single block for a paper #%>
                <li data-pub-venue="<%= conferences[pub.confkey].venue %>"
                    data-pub-cat="<%= conferences[pub.confkey].cat %>">
                    <div class="pub-block">
                        <p class="pub-title">
                            <%_ if (pub.links.length > 0) { _%>
                                <a href="<%= pub.links[0].split(' || ')[1] %>"><%= pub.title %></a>
                            <%_ } else { _%>
                                <%= pub.title %>
                            <%_ } _%>
                        </p>
                        <p class="pub-authors">
                            <%_ pub.authors.forEach((author, idx) => { _%>
                            <%_ if (pub.authors.length > 2 && idx > 0) { -%>,<%_ } -%>
                            <%_ if (idx === pub.authors.length - 1 && pub.authors.length > 1) { -%> and <%_ } -%>

                            <span class="pub-author pub-author-<%= author.replace(' ', '-') %>"><%= author %></span> <%_ }); %>
                        </p>
                        <p class="pub-conference">
                            <%= conferences[pub.confkey].name %> (
                                <a title="<%= conferences[pub.confkey].acceptance %>"
                                    href="<%= conferences[pub.confkey].url %>"><%= pub.confkey %></a>
                            )
                        </p>
                        <div class="pub-abstract">
                            <blockquote>
                                <%= pub.abstract %>
                            </blockquote>
                        </div>
                        <div class="pub-links">
                            <% pub.links.forEach(link => { %>
                                <% let [link_name, link_url] = link.split(' || '); %>
                                <a href="<%= link_url %>">[<%= link_name %>]</a>
                            <% }); %>
                            <a class="pub-link-bibtex" data-clipboard-text="<%= pub.bibtex %>">[bibtex]</a>
                            <a class="pub-link-abstract">[abstract]</a>
                        </div>
                    </div>
                </li>
    <%_ }); _%>
    <%# close last section #%>
    <%_ if (year !== '') { _%>
            </ul>
        </section>
    <%_ } _%>
    </div>
</div>

