{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "hexo": {
    "version": "3.8.0"
  },
  "scripts": {
    "restart": "npm run clean && npm run start",
    "clean": "rm -rf build",

    "prebuild": "mkdir -p build",
    "build": "hexo --output build generate",

    "prestart": "npm run build",
    "start": "hexo --output build server",

    "static-server": "hexo --output build server -s --silent &",
    "pretest": "npm run static-server && wait-on http://localhost:4000",
    "test": "blc -ro --filter-level 2 --exclude 豆知识 http://localhost:4000; pkill hexo",

    "deploy": "hexo --output build deploy"
  },
  "dependencies": {
    "@aetf/markdown-it-katex": "^2.1.0",
    "bluebird": "^3.5.3",
    "hexo": "^3.8.0",
    "hexo-deployer-rsync": "^0.1.3",
    "hexo-excerpt": "git+https://github.com/Aetf/hexo-excerpt.git",
    "hexo-fs": "^1.0.0",
    "hexo-generator-alias": "^0.1.3",
    "hexo-generator-archive": "^0.1.5",
    "hexo-generator-feed": "^1.2.2",
    "hexo-generator-index": "^0.2.1",
    "hexo-generator-searchdb": "^1.0.8",
    "hexo-generator-tag": "^0.2.0",
    "hexo-image-sizes": "^2.0.2",
    "hexo-inject": "^1.0.0",
    "hexo-prism-plus": "^1.1.0",
    "hexo-renderer-ejs": "^0.3.1",
    "hexo-renderer-markdown-it": "git+https://github.com/hexojs/hexo-renderer-markdown-it.git#89a5abe048f5a43b42328ad012fb445ded6e665b",
    "hexo-renderer-stylus": "^0.3.3",
    "hexo-server": "^0.3.1",
    "hexo-util": "^0.6.3",
    "lodash": "^4.17.11",
    "markdown-it-anchor": "^5.0.2",
    "xkcd-api": "^1.0.1"
  },
  "devDependencies": {
    "broken-link-checker": "^0.7.8",
    "wait-on": "^3.2.0"
  }
}
